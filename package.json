{
  "name": "reve-apy-formatter",
  "publisher": "SkyReve",
  "displayName": "Reve APY Formatter",
  "description": "Applicable Python (APY) Formatter",
  "icon": "logo.png",
  "version": "0.3.1",
  "engines": {
    "vscode": "^1.86.2"
  },
  "categories": [
    "Formatters"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SkyReve/apy-formatter.git"
  },
  "bugs": {
    "url": "https://github.com/SkyReve/apy-formatter/issues"
  },
  "activationEvents": [
    "workspaceContains:**/*.apy"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "apy",
        "aliases": [
          "APY",
          "apy"
        ],
        "extensions": [
          ".apy"
        ]
      }
    ],
    "commands": [
      {
        "command": "apy.openVirtualPython",
        "title": "APY: Open Virtual Python"
      },
      {
        "command": "apy.initializeWorkspace",
        "title": "APY: Initialize Workspace"
      }
    ],
    "configuration": {
      "title": "APY",
      "properties": {
        "apy.bootstrap.promptMode": {
          "type": "string",
          "enum": [
            "always",
            "onMissing",
            "never"
          ],
          "default": "always",
          "description": "Controls whether APY prompts to create workspace files when missing."
        }
      }
    },
    "configurationDefaults": {
      "python.languageServer": "Pylance",
      "python.analysis.diagnosticMode": "workspace",
      "files.associations": {
        "*.apy": "python"
      }
    }
  },
  "extensionDependencies": [
    "ms-python.python",
    "ms-python.vscode-pylance"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.86.2",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "prettier": "^3.5.1",
    "typescript": "^5.7.3"
  }
}